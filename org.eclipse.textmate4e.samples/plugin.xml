            icon="icons/freemarker.png"
            class="org.eclipse.textmate4e.samples.freemarker.FreemarkerEditor"
            id="org.eclipse.textmate4e.samples.freemarker.FreemarkerEditor">
            <contentTypeBinding
                  contentTypeId="org.eclipse.textmate4e.samples.freemarker">
            </contentTypeBinding>
      </editor>
   </extension>

