   <!-- Register C#, JSON, CSS TextMate grammars -->
   <extension
         point="org.eclipse.textmate4e.core.grammars">
      <grammar
      		scopeName="source.cs"
            path="./syntaxes/csharp.json" >
      </grammar>      
      <scopeNameContentTypeBinding
            contentTypeId="org.eclipse.languageserver.languages.csharp"
            scopeName="source.cs">
      </scopeNameContentTypeBinding>

      <grammar
      		scopeName="source.json"
            path="./syntaxes/JSON.tmLanguage" >
      </grammar>      
      <scopeNameContentTypeBinding
            contentTypeId="org.eclipse.languageserver.languages.json"
            scopeName="source.json">
      </scopeNameContentTypeBinding>
      
      <grammar
      		scopeName="source.css"
            path="./syntaxes/css.plist" >
      </grammar>      
      <scopeNameContentTypeBinding
            contentTypeId="org.eclipse.languageserver.languages.css"
            scopeName="source.css">
      </scopeNameContentTypeBinding>
                  
   </extension>
    	   
   <!-- C#, JSON, CSS GenericEditor uses TextMate presentation reconcilier -->
   <extension
         point="org.eclipse.ui.genericeditor.presentationReconcilers">
      <presentationReconciler
            class="org.eclipse.textmate4e.ui.text.TMPresentationReconciler"
            contentType="org.eclipse.languageserver.languages.csharp">
      </presentationReconciler>
      <presentationReconciler
            class="org.eclipse.textmate4e.ui.text.TMPresentationReconciler"
            contentType="org.eclipse.languageserver.languages.json">
      </presentationReconciler>
      <presentationReconciler
            class="org.eclipse.textmate4e.ui.text.TMPresentationReconciler"
            contentType="org.eclipse.languageserver.languages.css">
      </presentationReconciler>      
   </extension>
  
   <!-- TypeScript Editor -->
   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="TypeScript Editor"
            extensions="ts"
            icon="icons/ts.png"
            class="org.eclipse.textmate4e.samples.typescript.TypeScriptEditor"
            id="org.eclipse.textmate4e.samples.typescript.TypeScriptEditor">
      </editor>
   </extension>

	<!-- JSX Editor -->   
   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="JSX Editor"
            extensions="jsx,tsx"
            icon="icons/jsx.png"
            class="org.eclipse.textmate4e.samples.typescript.JSXEditor"
            id="org.eclipse.textmate4e.samples.typescript.JSXEditor">
      </editor>
   </extension>

	<!-- HTML Editor -->
	
	<extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.text"
            file-extensions="html"
            id="org.eclipse.textmate4e.samples.html"
            name="HTML"
            priority="normal">
      </content-type>
	</extension>  

   <extension
         point="org.eclipse.textmate4e.core.grammars">
      <grammar
      		scopeName="text.html.basic"
            path="./syntaxes/html.json" >
      </grammar>
      <grammar
      		scopeName="source.js"
            path="./syntaxes/JavaScript.tmLanguage.json" >
      </grammar>            
      <scopeNameContentTypeBinding
            contentTypeId="org.eclipse.textmate4e.samples.html"
            scopeName="text.html.basic">
      </scopeNameContentTypeBinding>
   </extension>
   	
   <extension
         point="org.eclipse.ui.editors">
      <editor
            name="HTML Editor"
            icon="icons/html.png"
            class="org.eclipse.textmate4e.samples.html.HTMLEditor"
            id="org.eclipse.textmate4e.samples.html.HTMLEditor">
            <contentTypeBinding
                  contentTypeId="org.eclipse.textmate4e.samples.html">
            </contentTypeBinding>
      </editor>
   </extension>

	<!-- Freemarker Editor -->
	
	<extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
