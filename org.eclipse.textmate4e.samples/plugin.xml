      </grammar>      
      <scopeNameContentTypeBinding
            contentTypeId="org.eclipse.textmate4e.samples.freemarker"
            scopeName="text.html.ftl">
      </scopeNameContentTypeBinding>
   </extension>
   	
   <extension
         point="org.eclipse.ui.editors">
